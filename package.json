{
  "name": "hamber-cli",
  "version": "0.1.0-beta.1",
  "trackingCode": "UA-46963158-10",
  "description": "A command-line tool for creating full stack hapi-ember applications using docker",
  "main": "bin/ham",
  "scripts": {
    "pretest": "npm run lint && npm run build",
    "prepublish": "npm run build",

    "build"      : "babel src --out-dir lib",
    "build:watch": "babel src --out-dir lib --watch",
    "lint"       : "eslint bin/ham src tests",
    "test"       : "node tests/runner",

    "test-all": "node tests/runner all",
    "autotest": "mocha --watch --reporter spec tests/**/*Test.js"
  },
  "bin": {
    "ham": "./bin/ham"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/catataw/hamber"
  },
  "keywords": [
    "hamber",
    "hamber-cli",
    "ember",
    "ember.js",
    "hapi",
    "hapi.js",
    "full-stack",
    "fullstack",
    "javascript",
    "cli",
    "docker",
  ],
  "author": "Marcelo Fernandes",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/catataw/hamber/issues"
  },
  "dependencies": {
    "babel": "^5.1.11",
    "captains-log": "^0.11.11",
    "chalk": "^1.0.0",
    "child-process-promise": "^1.0.1",
    "commander": "~2.6.0",
    "configstore": "^0.3.1",
    "diff": "^1.3.1",
    "ember-cli": "~0.2.3",
    "enpeem": "git://github.com/globegitter/enpeem.git#skip-dry-run-prefix-features",
    "exit": "^0.1.2",
    "findup": "^0.1.5",
    "fs-extra": "~0.16.3",
    "handlebars": "~3.0.0",
    "leek": "0.0.18",
    "lodash": "^3.6.0",
    "node-uuid": "^1.4.2",
    "npm-which": "^2.0.0",
    "pleasant-progress": "^1.0.2",
    "readline-sync": "^0.8.0",
    "pluralize": "^1.1.2",
    "resolve": "^1.0.0",
    "rsvp": "^3.0.18",
    "verboser": "^1.0.3",
    "walk-sync": "~0.1.3",
    "which": "^1.0.9",
    "yam": "0.0.18"
  },
  "devDependencies": {
    "babel-eslint": "^3.0.1",
    "chai": "^2.0.0",
    "chai-as-promised": "^4.2.0",
    "eslint": "^0.20.0",
    "glob": "4.0.5",
    "mocha": "^2.1.0",
    "node-require-timings": "0.0.2",
    "tmp-sync": "^1.0.1"
  },
  "preferGlobal": true
}
